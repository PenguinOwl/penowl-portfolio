  </p>

  <p>
    <%= form.label :date %><br>
    <%= form.text_area :date %>
  </p>

  <p>
    <%= form.label :imagelink %><br>
    <%= form.text_area :imagelink %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

