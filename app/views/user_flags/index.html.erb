<p id="notice"><%= notice %></p>

<h1>User Flags</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_flags.each do |user_flag| %>
      <tr>
        <td><%= user_flag.user %></td>
        <td><%= user_flag.content %></td>
        <td><%= link_to 'Show', user_flag %></td>
        <td><%= link_to 'Edit', edit_user_flag_path(user_flag) %></td>
        <td><%= link_to 'Destroy', user_flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

